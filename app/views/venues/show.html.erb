<div class="container mt-4">

<div class="row mt-2 justify-content-md-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">
          <%= @venue.name%>
          <small class="text-muted">
            <%= Neighborhood.find(@venue.neighborhood_id).name %>, <%= @venue.address %>
          </small>
        </h4> 
      </div>
      <div class="card-body">
        <div id="location_map" style="height: 360px;"></div>
      </div>
      <ul class="list-group">
        <li class="list-group-item list-group-item-sucess">
          Dishes you loved here
        </li>
        <% bookmarks = Bookmark.where( :user_id => current_user.id, :venue_id => @venue.id) %>
        <% bookmarks.each do |bookmark| %>
        <li class="list-group-tem">
          <p> 
            <a href=/dishes/<%=bookmark.dish_id%>>
              <%= Dish.find(bookmark.dish_id).name %>
            </a> 
          </p>
        <div class="btn-group btn-group-xs float-right">
         <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i> 
        </a> 
        </a>
        <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">
          <i class="fa fa-trash-o"></i>
        </a>
        </div>   
        </li>
        <% end %>
        <li> 
        <form action="/create_bookmark" method="post" class="form-inline">
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
              <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name), :class => "form-control") %>
              <!-- Label and input for venue_id -->
              <input type="hidden" name="venue_id" value="<%= @venue.id %>">
              <!-- Label and input for user_id -->
              <input type="hidden" name="user_id" value="<%= current_user.id %>">
              <span>
                <button class="btn btn-primary btn-sm ml-1">
                <i class="fa fa-heart"></i>
                </button>
              </span>
        </form>
        </li>
        <li class="list-group-item list-group-item-sucess">
          Popular dishes here
        </li>
        <% @venue.bookmarks.each do |bookmark| %>
        <li class="list-group-tem">
        <a href="/dishes/<%=bookmark.dish_id%>"> 
        <%= Dish.find(bookmark.dish_id).name %>
        </a>
        </li>
        <% end %>
      </ul>
    </div> 
  </div> 
</div> 




<!-- A Venue has many bookmarks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Bookmarks
      </li>

      <% @venue.bookmarks.each do |bookmark| %>
        <li class="list-group-item">
          <a href="/bookmarks/<%= bookmark.id %>">
            <%= bookmark.notes %>
          </a>
          <div class="btn-group btn-group-xs float-right">
            <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dish_id -->
      <div class="form-group">
        <label for="dish_id" class="control-label">
          Dish
        </label>

        <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :name), :class => "form-control") %>
      </div>

      <!-- Label and input for venue_id -->
      <input type="hidden" name="venue_id" value="<%= @venue.id %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for notes -->
      <div class="form-group">
        <label for="notes" class="control-label">
          Notes
        </label>

        <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-success">
        Create Bookmark
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

